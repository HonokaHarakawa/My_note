<div class="container col-12 text-center">
  <div class="col-9 text-right mt-3">
  <%= link_to new_post_path, class:"text-dark" do %>

    <h1><i class="far fa-plus-square"></i></h1>
  <% end %>
  </div>
  <% @posts.each do |post| %>

  <div class="row">
    <div class="col-9 mb-3">
    <%= link_to user_path(post.user_id), class:"text-dark" do %>
      <%= attachment_image_tag post.user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg", class: "rounded-circle" %>
      <%= post.user.name %>
    <% end %>
    </div>

  </div>
  <div class="row">
    <div class="col-12">
      <% if post.user_id == current_user.id %>
        <%= link_to post_path(post) do %>
          <%= attachment_image_tag post, :image, :fill, 430, 350 %>
        <% end%>
      <% else %>
        <%= link_to user_path(post.user_id) do %>
          <%= attachment_image_tag post, :image, :fill, 430, 350 %>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-12 text-center mb-3">
      <% if post.user_id == current_user.id %>
        <%= link_to post_path(post), class:"text-dark" do %>
          <%= post.body %>
        <% end %>
      <% else %>
        <%= link_to user_path(post.user_id), class:"text-dark" do %>
          <%= post.body %>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <% if current_user.already_liked?(post) %>
        <%= link_to post_likes_path(post), class:"text-dark", method: :delete do %>
          <i class="fas fa-heart"></i>
        <% end %>
      <% else %>
        <%= link_to post_likes_path(post), class:"text-dark", method: :post do %>
          <i class="far fa-heart"></i>
        <% end %>
      <% end %>
        <%= post.likes.count %>
      <% if post.user_id == current_user.id %>
        <%= link_to "いいね一覧", post_likes_path(post), class:"text-dark" %>
      <% end %>
    </div>
  </div>


  <div class="row">
    <div class="col-8 text-right mt-2">
      <%= post.created_at.strftime("%Y/%m/%d") %>
    </div>
  </div>

  <% end %>
</div>