<%= link_to "新規投稿", new_post_path %>
<div class="container col-12 text-center">
  <% @posts.each do |post| %>

  <div class="row">
    <div class="col-9 mt-3 mb-2">
      <%= attachment_image_tag post.user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg", class: "rounded-circle" %>
      <%= post.user.name %>
    </div>

  </div>
  <div class="row">
    <div class="col-12">
      <%= attachment_image_tag post, :image, :fill, 430, 250 %>
    </div>
  </div>

  <div class="row">
    <div class="col-12 mt-2">
      <%= post.body %>
    </div>
  </div>

  <div class="row">
    <div class="col-8 text-right">
      <%= post.created_at.strftime("%Y/%m/%d") %>
    </div>
  </div>

  <% end %>
</div>