<div class="container">
  
  <div class="row">
    <div class="col-5 text-center mt-5">
      <%= link_to '戻る', :back, class:"text-dark" %>
    </div>
  </div>
  
  
  <div class="row">
    <div class="col-5 text-center mt-5">
      <h2>投稿編集</h2>
    </div>
  </div>
　
  <%= form_with model: @post, url: post_path(@post), local: true do |f| %>

   <div class="row">
      <div class="col-5 text-right mt-3">
        <%= f.label :画像 %>
      </div>
      <div class="col-5 mt-3">
        <%= f.attachment_field :image %>
      </div>
    </div>


    <div class="row">
      <div class="col-5 text-right mt-4">
        <%= f.label :本文 %>
      </div>
      <div class="col-5 mt-4">
        <%= f.text_area :body %>
      </div>
    </div>


    <div class="row">
      <div class="col-12 text-center mt-3">
        <%= f.submit "投稿", class:"btn btn-outline-secondary" %>
      </div>
    </div>

  <% end %>
</div>