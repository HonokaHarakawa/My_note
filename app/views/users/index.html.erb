<div class="container">
  <div class="row">
    <div class="col-auto mt-5 mb-3">
      <h3>ユーザー一覧</h3>
    </div>
  </div>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>ユーザー名</th><th>性別</th><th>お住まい</th><th>職業</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <% if user.is_active == true %>
          <td>
            <%= link_to user_path(user) do %>
            <div class="text-dark">
              <%= attachment_image_tag user,:profile_image, fallback: "no_image.jpg", size:'40x40', class: "rounded-circle" %>
              <%= user.name %>
              </div>
            <% end %>
          </td>
          <td><%= user.sex_i18n %></td><td><%= user.location %></td><td><%= user.profession %></td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>