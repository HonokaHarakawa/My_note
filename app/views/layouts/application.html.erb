<!DOCTYPE html>
<html>
  <head>
    <title>MyNote</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
  </head>

  <body>
    <header>
      <a class="navbar-brand" href="/">My note</a>
        <% if user_signed_in? %>
          <div id="drawer_toggle">
            <span></span>
            <span></span>
            <span></span>
          </div>
          
            <nav id="global_nav">
              <ul>
                <li>
                  <a class="nav-item">
                     <%= link_to "MyPage", user_path(current_user), class:'nav-link text-dark' %>
                   </a>
                </li>
  
                <li>
                  <div class="nav-item">
                    <%= link_to "Spending", new_spending_path, class:'nav-link text-dark' %>
                  </div>
                </li>
  
                <li>
                  <div class="nav-item">
                    <%= link_to "Graph", graph_spendings_path, class:'nav-link text-dark' %>
                  </div>
                </li>
  
                <li>
                  <div class="nav-item">
                    <%= link_to "Calendar", spendings_path, class:'nav-link text-dark' %>
                  </div>
                </li>
  
                <li>
                  <div class="nav-item">
                    <%= link_to "Timeline",  posts_path, class:'nav-link text-dark' %>
                  </div>
                </li>
  
                <li>
                  <div class="nav-item">
                    <%= link_to "LogOut",  destroy_user_session_path, method: :delete, class:'nav-link text-dark' %>
                  </div>
                </li>
              </ul>
            </nav>
          
        <% end %>

      </nav>
    </header>
    <main>
    <% if flash[:notice] %>
      <p class="notice text-center text-success mt-3"><%= notice %></p>
    <% end %>
    <% if flash[:alert] %>
      <p class="alert text-center text-danger mt-3"><%= alert %></p>
    <% end %>
    <%= yield %>
    </main>

    <footer>
      <div class="row">
        <div class="col-md-12">
          <p>@ All rights reserved by Harakawa.</p>
        </div>
      </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.6.1.min.js" integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous"></script>
    <script>
      $(function(){
        $("#drawer_toggle").click(function(){
          $(this).toggleClass("open");
          $("#global_nav").slideToggle();
        });
      });
    </script>
  </body>



</html>
