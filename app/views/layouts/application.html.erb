<!DOCTYPE html>
<html>
  <head>
    <title>MyNote</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">My note</a>
        <div class="collapse navbar-collapse justify-content-end">
          <ul class="navbar-nav">
            <% if user_signed_in? %>
            
            <li class="nav-item">
              <%= link_to "マイページ", user_path(current_user), class:'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to "入力", new_spending_path, class:'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to "カレンダー", spendings_path, class:'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to "ユーザー一覧", users_path, class:'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to "ログアウト",  destroy_user_session_path, method: :delete, class:'nav-link text-dark' %>
            </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
