<div class="container col-12">
  <div class="row">
    <div class="col-5 text-center mt-5">
      <%= attachment_image_tag @user, :profile_image, :fill, 130, 130, fallback: "no_image.jpg", class: "rounded-circle"  %>
      <div class="mt-3">
       <h4><%= @user.name %></h4>
      </div>
        <h5><%= @user.sex_i18n %> <%= @user.location %>在住 <%= @user.profession %></h5>
      <% if @user.id == current_user.id %>
        <%= link_to edit_user_path(@user) do %>
          <button type="button" class="btn btn-outline-secondary"><i class="fas fa-cog"></i></button>
        <% end %>
        <%= link_to likes_path do %>
          <button type="button" class="btn btn-outline-secondary"><i class="fas fa-heart"></i></button>
        <% end %>
      <% end %>
      <% if @user.id == current_user.id %>
      <div class="mt-3">
        <h3>目標</h3>
      </div>
      <%= form_with model: @goal, url: goals_path do |f| %>

      <div class="mt-4 mb-3">
        <%= f.text_area :goal %>
      </div>
        <%= f.submit "登録", class:"btn btn-outline-secondary"%>
      <% end %>
      <% end %>
    <table class="table mt-3">
            <thead>
              <tr>
                <th>目標</th><th></th><th></th>
              </tr>
            </thead>
            <tbody>
              <% goals.each do |goal| %>
              <tr>
                <td>
                  <% if goal.achievement == true %>
                    <div class="text-danger">達成</div>
                  <% else %>
                    <div class="text-secondary">未達成</div>
                  <% end %>
                </td>
                <td>
                  <% if goal.user_id == current_user.id %>
                    <%= link_to goal_path(goal), class:"text-dark" do %>
                      <%= goal.goal %>
                    <% end %>
                  <% else %>
                    <%= goal.goal %>
                  <% end %>
                </td>
                <td>
                  <% if current_user.already_liked?(goal) %>
                    <%= link_to goal_like_path(goal,goal.likes), class:"text-dark", method: :delete do %>
                      <i class="fas fa-heart"></i>
                    <% end %>
                  <% else %>
                    <%= link_to goal_likes_path(goal), class:"text-dark", method: :post do %>
                      <i class="far fa-heart"></i>
                    <% end %>
                  <% end %>
                  <%= goal.likes.count %>
                </td>
                <% if goal.user_id == current_user.id %>
                  <td>
                    <%= link_to goal_path(goal), class:"text-dark", method: :delete, data: {confirm: "削除しますか？"} do %>
                      <i class="far fa-trash-alt"></i>
                    <% end %>
                  </td>
                  <% end %>
              </tr>
              <% end %>
            </tbody>
        </table>
    </div>