<div class="container col-10">
  <div class="row">
    <div class="text-center col-10">
      <h4><%= @spending.start_time.strftime("%Y/%m/%d") %></h4>
    </div>
  </div>

  <div class="row">
    <div class="text-center col-10">
      <h3><%= @spending.genre.name %><%= @spending.spending_amount.to_s(:delimited) %>円</h3>
    </div>
  </div>

  <div class="row">
    <div class="text-center col-10">
      <h3><%= @spending.memo %></h3>
    </div>
  </div>


  <div class="row">
    <div class="text-center col-10">
      <h4>
        <%= link_to "戻る", spendings_path %>|
        <%= link_to "編集", edit_spending_path %>|
        <%= link_to "削除", spending_path, method: :delete %>
      </h4>
    </div>
  </div>
</div>