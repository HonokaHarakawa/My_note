<div class="container col-12">
  <div class="row">
    <div class="col-5 text-center">
      <div class="mt-5">
        <h2>目標</h2>
      </div>
      <%= form_with model: @goal, url: goals_path do |f| %>

      <div class="mt-4 mb-4">
        <%= f.text_area :goal %>
      </div>
        <%= f.submit "登録", class:"btn btn-secondary" %>
      <% end %>
    </div>
    <div class="col-7 mt-5">
      <table class="table">
          <thead>
            <tr>
              <th>目標</th>
            </tr>
          </thead>
          <% @goals.each do |goal| %>

          <tbody>
             <td>
               <%= link_to user_path(goal.user) do %>
                 <div class="text-dark">
                   <%= attachment_image_tag goal.user, :profile_image,:fill,30,30, fallback: "no_image.jpg", class: "rounded-circle" %>
                   <%= goal.goal %>
                 </div>
               <% end %>
              </td>
          </tbody>
          <% end %>
      </table>
    </div>
  </div>
</div>