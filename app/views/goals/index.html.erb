<div class="container col-12">
  <div class="row">
    <div class="col-5 text-center">
      <div class="mt-5">
        <h2>目標</h2>
      </div>
      <%= form_with model: @goal, url: goals_path do |f| %>

      <div class="mt-4 mb-4">
        <%= f.text_area :goal %>
      </div>
        <%= f.submit "登録", class:"btn btn-secondary" %>
      <% end %>
    </div>
    <div class="col- mt-5">
      <table class="table">
          <thead>
            <tr>
              <th>目標</th>
            </tr>
          </thead>
          <% @goals.each do |goal| %>
            <tbody>

              <tr>
               <td><%= link_to user_path(goal.user) do %>
                  <div class="text-dark">
                    <%= attachment_image_tag goal.user,:profile_image, fallback: "no_image.jpg", size:'40x40', class: "rounded-circle" %>
                    <%= goal.user.name %><% end %>
                </td>

                <td>
                  <%= goal.goal %>
                </td>
                <td>
                  <% if current_user.already_liked?(goal) %>
                    <%= link_to "いいねをはずす", goal_like_path(goal), method: :delete %>
                  <% else %>
                    <%= link_to "いいね", goal_likes_path(goal), method: :post %>
                  <% end %>
                  <%= goal.likes.count %>
                </td>

              </tr>

            </tbody>
          <% end %>
      </table>
    </div>
  </div>
</div>