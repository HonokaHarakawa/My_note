<div class="container col-12">
  <div class="row">
    <div class="col-2 text-center">
      <div class="mt-5">
        <h2>目標</h2>
      </div>
      <%= form_with model: @goal, url: goals_path do |f| %>

      <div class="mt-4 mb-4">
        <%= f.text_area :goal %>
      </div>
        <%= f.submit "登録", class:"btn btn-secondary" %>
      <% end %>
    </div>
    <div class="col-4 mt-5">
      <table class="table">
          <thead>
            <tr>
              <th>目標</th>
            </tr>
          </thead>
          <% @goals.each do |goal| %>

          <tbody>
             <td>
               <%= link_to user_path(goal.user) do %>
                 <div class="text-dark">
                   <%= attachment_image_tag goal.user, :profile_image,:fill,30,30, fallback: "no_image.jpg", class: "rounded-circle" %>
                   <%= goal.user.name %>さん
                   <%= goal.goal %>
                 </div>
               <% end %>
              </td>
          </tbody>
          <% end %>
      </table>
    </div>
    <div class="col-2 mt-4">
      <h2>使ったお金</h2>
        <% @user.each do |user| %>
          <% user.spendings.each do |s| %>
          
          <div class="card" style="width: 18rem;">
    　　　　　　<div class="card-body">
              <h5><%= s.user.name %>さん</h5>
              <p><%= s.genre.name %>
              <%= s.spending_amount %>円
              <%= s.memo %></p>
            </div>
          </div>
          <% end %>
        <% end %>
    </div>
  </div>
</div>