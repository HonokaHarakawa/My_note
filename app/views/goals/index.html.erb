<div class="container col-12">
  <div class="row">
    <div class="col-5 text-center">
      <div class="mt-5">
        <h2>目標</h2>
      </div>
      <%= form_with model: @goal, url: goals_path do |f| %>

      <div class="mt-4 mb-4">
        <%= f.text_area :goal %>
      </div>
        <%= f.submit "登録", class:"btn btn-secondary" %>
      <% end %>
    </div>
    <div class="col- mt-5">
      <table class="table">
          <thead>
            <tr>
              <th>目標</th>
            </tr>
          </thead>
          <% @goals.each do |goal| %>
            <tbody>
              <tr>
                <%= link_to user_path(goal.user) do %>
               <td>
                  <div class="text-dark">
                    <%= attachment_image_tag goal.user, :profile_image,:fill,30,30, fallback: "no_image.jpg", class: "rounded-circle" %>
                    <%= goal.user.name %>
                </td>
                <td>
                  <%= goal.goal %>
                </td>
                  <% if goal.user_id == current_user.id %>
                <td>
                  <%= link_to edit_goal_path(goal) do %>
                    <i class="fas fa-edit"></i>
                  <% end %>
                  <%= link_to goal_path(goal), method: :delete do %>
                    <i class="far fa-trash-alt"></i>
                  <% end %>
                  
                </td>
                    <% end %>
                   </div>
                 
                </td>
                <% end %>
              </tr>
            </tbody>
          <% end %>
      </table>
    </div>
  </div>
</div>